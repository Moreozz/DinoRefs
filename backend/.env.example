# DinoRefs Backend Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///dinorefs.db
# Для PostgreSQL на Timeweb Cloud:
# DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ЮMoney Configuration
YOOMONEY_SHOP_ID=your-yoomoney-shop-id
YOOMONEY_SECRET_KEY=your-yoomoney-secret-key
YOOMONEY_NOTIFICATION_URL=https://your-domain.com/api/payments/yoomoney/webhook

# Email Configuration (для уведомлений)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@dinorefs.com

# Redis Configuration (для кэширования)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Security Configuration
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/dinorefs.log

# API Keys
OPENAI_API_KEY=your-openai-api-key-for-ml-features

